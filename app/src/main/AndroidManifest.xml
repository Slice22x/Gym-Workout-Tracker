<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GymWorkoutTracker"
        tools:targetApi="31">
        <activity
            android:name=".SettingsScreen"
            android:exported="false" />
        <activity
            android:name=".EditScreens.EditWorkoutsScreen"
            android:exported="false" />
        <activity
            android:name=".EditScreens.EditExercisesScreen"
            android:exported="false" />
        <activity
            android:name=".NewScreens.NewWorkoutScreen"
            android:exported="false" />
        <activity
            android:name=".NewScreens.NewExerciseScreen"
            android:exported="false"
            android:parentActivityName=".NewScreens.DaysWorkoutChanger" />
        <activity
            android:name=".NewScreens.DaysWorkoutChanger"
            android:exported="false" />
        <activity
            android:name=".Days.MainActivityDay"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>