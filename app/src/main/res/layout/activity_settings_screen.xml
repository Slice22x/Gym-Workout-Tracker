<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsScreen">

    <Button
        android:id="@+id/btSetLbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#9E9E9E"
        android:text="LBS"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="7.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWeightSetting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btSetKg"
        app:layout_constraintTop_toTopOf="@+id/tvWeightSetting" />

    <Button
        android:id="@+id/btSetKg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00C853"
        android:text="KG"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="7.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvWeightSetting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvWeightSetting"
        app:layout_constraintTop_toTopOf="@+id/tvWeightSetting" />

    <Button
        android:id="@+id/btSaveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#00C853"
        android:text="SAVE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="7.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSettingsScreen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Settings:"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWeightSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Weight Unit:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSettingsScreen" />
</androidx.constraintlayout.widget.ConstraintLayout>